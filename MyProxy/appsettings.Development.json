{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy":{
    "Routes": {
      "route1" : {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/bordar/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/bordar"
          },
          {
            "HttpMethodChange": "PUT",
            "Set": "POST"
          }
        ]
      },
      "route2" : {
        "ClusterId": "cluster1",
        "RateLimiterPolicy" : "fixed",
        "Match": {
          "Path": "/bordar/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/bordar"
          },
          {
            "HttpMethodChange": "PUT",
            "Set": "POST"
          }
        ]
      },
      "route3" : {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "/core/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/core"
          }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5079"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:2020"
          }
        }
      }
    }
  }
}
